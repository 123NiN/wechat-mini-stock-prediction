.home1{
  height: 55px;
  width: 55px;
  margin: auto;
  
}
.userinfo-avatar {
  overflow: hidden;
  width: 40px;
  height: 40px;
  margin-left: 2px;
  margin-right: 5px;
  margin-top: 2px;
  border-radius: 50%;
}
.news-box {
  height: 100%;
}

.news-box .header {
  height: 106rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #efeff4;
}

.news-box .header .search-box {

  height: 70rpx;
  background-color: #fff;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.news-box .header .search-box icon {
  position: absolute;
  left: 35%;
}

.news-box .header .search-box input {
  width: 100%;
  text-align: center;
}
.swiper-box{
  margin-bottom: 6rpx;
  position: relative;
}

.swiper-box .txt{
  position: absolute;
  left: 0;
  bottom: 0;
  color: #fff;
  line-height: 36rpx;
  background-color: rgba(33, 10, 8, 0.5);
  font-size: 28rpx;
  width: 100%;
}
.news-area .news-area-inner{
  height: 220rpx;
  display: flex;
  margin-bottom: 6rpx;

}

.news-area  .pic-area {
  width: 330rpx;
  height: 220rpx;
}

.news-area .pic-area image {
  width: 100%;
  height: 100%;
}

.news-area .content-area{
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
}

.news-area .content-area .title {
  width: 333rpx;
  /* 文本不折行 */
  white-space: nowrap;
  /* 溢出隐藏 */
  overflow: hidden;
  /* 溢出显示3个小圆点 */
  text-overflow: ellipsis;


}

.news-area .content-area .desc {
  color: #acb1af;
  /* 溢出隐藏 */
  overflow: hidden;
  /* 溢出显示3个小圆点 */
  display: -webkit-box;
  /* 设置多少行开始显示小圆点 */
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.news-area .content-area .bot{
  color: #dbd5cc;
}
.nomore{
  text-align: center;
  font-size: 36rpx;
}